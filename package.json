  "type": "commonjs",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "tsc --project tsconfig.json",
    "serve": "node dist/index.js"
  },
  "keywords": [
    "koa",
    "typescript",
    "typeorm",
    "mysql",
    "rest-api"
